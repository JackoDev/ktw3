

<section>
  <h1><%= @user.name %></h1>
  <span><%= link_to "@#{@user.username}", @user.username %></span>
  <span><b>Tweets:</b> (<%= @user.tweets.count %>)
  </span>
</section>

<div>
<%= render 'shared/stats'%>
</div>
<br>

<div>
  <h3><%= @title %></h3>
</div>

<div>
<% if @users.any? %>
  <% @users = @users.order(:name) %>
    <% @users.each do |user| %>
      <%= link_to "#{user.name}", user %> - 
      (<%= link_to "@#{user.username}", user %>)
      <% if current_user.following?(user)%>
        <br>
        <% next %>
      <% else %>
        <%= render 'follow' %>
        <br>
      <% end %>
    <br>
  <% end %>
    <%= will_paginate %>
<% end %>
</div>